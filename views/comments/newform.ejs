<%- include ('../partials/header.ejs') %>

<div class="container" style="margin-top:2rem ;" >
    <h1 style="text-align: center;">Add New Comment to <%=campground.name%> Camp</h1>
    <div style="width: 30%; margin:3.5rem auto;">
      <form  action="/campgrounds/<%=campground._id%>/comments" method="post">
        <div class="form-group">
          <label for="text">Enter Your Comment</label>
          <textarea class="form-control" type="text" name="text" placeholder="Your Comment Here" rows='3'></textarea>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block" style="margin-top: 1rem;">Submit</button>
        </div>
        <hr>
            <a href="/campgrounds">Back</a>
      </form>
    </div>


  </div>
