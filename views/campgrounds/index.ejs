<%- include ('../partials/header.ejs') %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1 class="indtitle"><span class="glyphicon glyphicon-tent align-bottom" aria-hidden="true"></span>Welcome to IndiCamp!</h1>
      <p class="inddes">Check out any of these serene campsites</p>
      <form class="form-inline" action="/campgrounds" method="GET">
        <div class="form-group has-feedback">
          <label for="search"></label>
        <input class="form-control" type="text" name="search" placeholder="Search campgrounds" autocomplete="off" >
      </div>
      </form>
      <hr>
      <a class="pull-right" href="/campgrounds/new">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Add New Campground
      </a>

    </div>
  </header>


  <div class="row text-center">
    <% campgrounds.forEach(function(campground){ %>
      <div class="col-md-3 col-sm-6">
        <figure class="figure">
          <img src="<%= campground.image %>" class="figure-img img-fluid rounded">
          <figcaption class="figure-caption"><h4><%= campground.name %></h4></figcaption>
          <br>
          <p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a>
          </p>
        </figure>
      </div>

    <% });%>
  </div>
</div>


<%- include ('../partials/footer.ejs') %>
