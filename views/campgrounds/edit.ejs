<%- include ('../partials/header.ejs') %>

<div class="container" style="margin-top: 2rem;">
    <h1 style="text-align: center;">Edit <%= campground.name %> </h1>
    <div style="width: 30%; margin:3.5rem auto;">
      <form  action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">Campground Name</label>
          <input class="form-control" type="text" name="name" value="<%= campground.name %> ">
        </div>
        <div class="form-group">
          <label for="image">Image Url</label>
          <input class="form-control" type="text" name="image" value="<%= campground.image %> ">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" type="text" name="description" rows="6"><%= campground.description %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Update Campground !</button>
        </div>
        <hr>
            <a href="/campgrounds">Back</a>
      </form>
    </div>


  </div>
<%- include ('../partials/footer.ejs') %>
