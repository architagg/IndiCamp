<%- include ('../partials/header.ejs') %>

<div class="container" style="margin-top:2rem ;">
    <h1 style="text-align: center;">Create a New Campground !</h1>
    <div style="width: 30%; margin:3.5rem auto;">
      <form  action="/campgrounds" method="post">
        <div class="form-group">
          <label for="name">Campground Name</label>
          <input class="form-control" type="text" name="name" placeholder="Name">
        </div>
        <div class="form-group">
          <label for="image">Image Url</label>
          <input class="form-control" type="text" name="image" placeholder="ImageURL">
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea class="form-control" type="text" name="description" rows="6" placeholder="Description"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit</button>
        </div>
        <hr>
            <a href="/campgrounds">Back</a>
      </form>
    </div>


  </div>
